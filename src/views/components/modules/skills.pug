script(type="text/x-template")#skills-list
    ul.skills__list
        li.skills__item.skills-row(v-for="skill in skills")
            skills-row(
            :skill="skill"
            )

script(type="text/x-template")#skills-row
    .skllls-row
        .skills__item-title {{skill.skillsGroup}}
        ul.skills-row__list
            li.skills-row__item(v-for="(skillPercents, skillName) in skill.skills")
                skill(
                :skillName="skillName"
                :skillPercents="skillPercents"
                )

script(type="text/x-template")#skill
    .circle
        svg(viewBox="0 0 110 110" preserveAspectRatio="none").circle__figure
            circle(cx="50%" cy="50%" r="45").circle__below
            circle(cx="50%" cy="50%" r="45" ref="color-circle").circle__above
        .skills__img-title {{ skillName }}